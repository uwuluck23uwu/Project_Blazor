@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark">
        <MudIconButton Style="color: #EDE7F6;" Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudItem xs="12" sm="6" md="4" lg="9">
            <MudText Typo="Typo.h6">MENU</MudText>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <LoginDisplay />
        </MudItem>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

